## in order to install curl, you must edit the /etc/apt/sources.list file. to fix this,
  sudo nano /etc/apt/sources.list ##this will open the configuration file in the nano text editor
  #add: deb http://deb.debian.org/debian/ trixie main contrib non-free-firmware
  #add: deb http://security.debian.org/debian-security trixie-security main
  #add: deb http://deb.debian.org/debian/ trixie-updates main
  #Ctrl+O to write out (save), Enter to confirm and Ctrl+X to exit nano editor
sudo apt update
sudo apt install apt-transport-https
sudo apt install ca-certificates
sudo apt install curl
sudo apt install gnupg
sudo apt install lsb-release

curl -fsSL https://download.docker.com/linux/debian/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg

echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

sudo apt update
sudo apt install docker-ce docker-ce-cli containerd.io docker-compose-plugin

# https://www.datacamp.com/tutorial/install-docker-debian is a resource for docker installation


###alternately:
##This script automatically detects your system's architecture and installs the necessary packages. 

##Update your system packages in the terminal:
sudo apt update && sudo apt upgrade -y

##Download and run the Docker installation script:
curl -fsSL https://get.docker.com -o get-docker.sh
sudo sh get-docker.sh

##Add your user to the docker group to run Docker commands without needing sudo:
sudo usermod -aG docker $USER
##You will need to log out and log back in (or reboot the Raspberry Pi) for this change to take effect.

##Verify the installation by running the hello-world container:
docker run hello-world
